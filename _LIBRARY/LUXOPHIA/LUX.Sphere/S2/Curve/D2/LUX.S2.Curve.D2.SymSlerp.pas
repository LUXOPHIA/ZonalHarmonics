//%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% SymSlerp

function SymSlerp( const V1_,V2_,V3_:TSingle2Sw ) :TSingle2Sw; overload;
function SymSlerp( const V1_,V2_,V3_:TDouble2Sw ) :TDouble2Sw; overload;

implementation //############################################################### ■

uses LUX.S2.Curve.Glerp;

//$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$【 R E C O R D 】

//$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$【 C L A S S 】

//$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$【 R O U T I N E 】

//%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% SymSlerp

function SymSlerp( const V1_,V2_,V3_:TSingle2Sw ) :TSingle2Sw;
var
   V1, V2, V3 :TSingle2Sw;
begin
     V1 := V1_ + V2_ + V3_;
     V2 := V2_ + V3_ + V1_;
     V3 := V3_ + V1_ + V2_;

     Result := Glerp( V1, V2, V3 );
end;

function SymSlerp( const V1_,V2_,V3_:TDouble2Sw ) :TDouble2Sw;
var
   V1, V2, V3 :TDouble2Sw;
begin
     V1 := V1_ + V2_ + V3_;
     V2 := V2_ + V3_ + V1_;
     V3 := V3_ + V1_ + V2_;

     Result := Glerp( V1, V2, V3 );
end;

end. //######################################################################### ■